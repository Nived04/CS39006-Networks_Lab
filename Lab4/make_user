CC = gcc
CFLAGS = -Wall -O2
LDFLAGS = -L. -lksocket -lpthread

TARGETS = user1 user2
SRCS1 = user1.c
SRCS2 = user2.c
OBJS1 = $(SRCS1:.c=.o)
OBJS2 = $(SRCS2:.c=.o)

all: $(TARGETS)

user1: $(OBJS1)
	$(CC) $(OBJS1) -o $@ $(LDFLAGS)

user2: $(OBJS2)
	$(CC) $(OBJS2) -o $@ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS1) $(OBJS2) $(TARGETS)